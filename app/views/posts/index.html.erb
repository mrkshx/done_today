<div class="container">
  <h1>Posts#index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>


<% if @posts_today %>
  <h2>Today</h2>
  <ul>
  <% @posts_today.each do |post| %>
    <li>
      <div class="post-box">
          <%= post.user.email%> has...
          <%= post.title %>
          <%= link_to "View Update", post_path(post) %>
        </div>
    </li>
  <% end %>
  </ul>
<% end %>
